<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/material_dynamic_neutral80"
    app:strokeWidth="1dp"
    android:backgroundTint="@color/material_dynamic_neutral99">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:padding="8dp">


        <CheckBox
            android:id="@+id/checkTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/material_dynamic_neutral40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:id="@+id/textTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Walk the dog"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/checkTask"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />


        <TextView
            android:id="@+id/textTaskDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="22/10/2025"
            android:textSize="12sp"
            android:textColor="@color/material_dynamic_neutral40"
            app:layout_constraintStart_toStartOf="@id/textTaskTitle"
            app:layout_constraintTop_toBottomOf="@id/textTaskTitle"
            app:layout_constraintEnd_toEndOf="@id/textTaskTitle"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
