<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral99">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="32dp">
            <!-- Calendar Container -->

            <TextView
                android:id="@+id/streakText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textColor="@color/indigo"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:id="@+id/calendarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:mcv_headerTextAppearance="@style/TextAppearance.AppCompat.Title"
                    app:mcv_selectionColor="@color/wisteria"
                    app:mcv_showOtherDates="all"
                    app:mcv_weekDayTextAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </LinearLayout>

            <GridLayout
                android:id="@+id/lowerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="0dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <!-- Box 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical"
                    android:background="@android:drawable/editbox_background_normal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tasks"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/textTasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tasks completed:" />
                </LinearLayout>

                <!-- Box 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical"
                    android:background="@android:drawable/editbox_background_normal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_goal"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/textScreenGoals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Screen goals met:" />
                </LinearLayout>

                <!-- Box 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical"
                    android:background="@android:drawable/editbox_background_normal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_score"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/textDailyScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily score:" />
                </LinearLayout>

                <!-- Box 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_columnWeight="1"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical"
                    android:background="@android:drawable/editbox_background_normal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_streak"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/textStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current streak:" />
                </LinearLayout>

            </GridLayout>




        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/navigation_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
