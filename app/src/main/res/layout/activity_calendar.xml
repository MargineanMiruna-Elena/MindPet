<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral99">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="32dp">
            <!-- Calendar Container -->

            <TextView
                android:id="@+id/streakText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textColor="@color/indigo"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:id="@+id/calendarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card"
                    app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:mcv_headerTextAppearance="@style/TextAppearance.AppCompat.Title"
                    app:mcv_selectionColor="@color/wisteria"
                    app:mcv_showOtherDates="all"
                    app:mcv_weekDayTextAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </LinearLayout>

            <!-- Lower Info Section -->
            <GridLayout
                android:id="@+id/lowerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTasks"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Tasks completed:" />

                <TextView
                    android:id="@+id/textScreenGoals"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Screen goals met:" />

                <TextView
                    android:id="@+id/textDailyScore"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Daily score:" />

                <TextView
                    android:id="@+id/textStreak"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="Current streak:" />

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/navigation_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
